{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@models/*": ["./src/models/*"],
      "@mocks/*": ["./src/mocks/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@views/*": ["./src/views/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
